<Window
    x:Class="HW1.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="600"
    Height="800"
    MinWidth="600"
    MinHeight="600"
    MaxWidth="600"
    MaxHeight="600"
    d:DesignHeight="600"
    d:DesignWidth="600"
    Background="Transparent"
    CanResize="False"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Panel>
            <ExperimentalAcrylicBorder IsHitTestVisible="False">
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial
                        BackgroundSource="Digger"
                        MaterialOpacity="0.65"
                        TintColor="Black"
                        TintOpacity="1" />
                </ExperimentalAcrylicBorder.Material>
            </ExperimentalAcrylicBorder>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="AOP Home Assignment 1/5" />

                <!--  TextBlock to display information like dimensions and maybe errors  -->
                <TextBlock
                    Name="InformationTextBlock"
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Text="Load File to start" />

                <!--  Cool Canvas with a glow effect and stuff!!!  -->
                <Canvas
                    Name="PixelCanvas"
                    Grid.Row="2"
                    Width="400"
                    Height="400"
                    Margin="10"
                    ClipToBounds="True">
                    <Canvas.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Offset="0" Color="#EFEFEF" />
                            <GradientStop Offset="1" Color="#DFDFDF" />
                        </LinearGradientBrush>
                    </Canvas.Background>
                    <Canvas.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            OffsetX="2"
                            OffsetY="2"
                            Opacity="0.9"
                            Color="#808080" />
                    </Canvas.Effect>
                </Canvas>


                <!--  Buttons  -->
                <StackPanel
                    Grid.Row="4"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button
                        Name="LoadButton"
                        Width="100"
                        Height="40"
                        Margin="5"
                        Content="Load"
                        FontSize="16" />
                    <Button
                        Name="SaveButton"
                        Width="100"
                        Height="40"
                        Margin="5"
                        Content="Save"
                        FontSize="16" />
                    <Button
                        Name="SaveAsButton"
                        Width="100"
                        Height="40"
                        Margin="5"
                        Content="Save As"
                        FontSize="16" />
                </StackPanel>
            </Grid>
        </Panel>
    </ScrollViewer>
</Window>
